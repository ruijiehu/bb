.page__bd {
  height: 100%;
  background: #fff;
}

.page__bd {
  padding-bottom: 0;
  padding:0 40rpx;

}
.weui-tab__panel {
  height:unset;
}

.weui-media-box{
  width: 100%;
  box-sizing: border-box;
  position: relative;
  /* padding-right: 220rpx; */
}
.weui-media-box:before {
  left: 0;
  border-top: 0;
  background: #f7f7f7;
  margin: 0 30rpx;
}

.weui-media-box__title image {
  width: 60rpx;
  height: 36rpx;
  margin-right: 10rpx;
  vertical-align: text-bottom; 
}

.weui-media-box__desc {
   -webkit-line-clamp: 1; 
    font-size: 28rpx; 
  /* font-size: 24rpx; */
}

.weui-media-box__info {
  font-size: 22rpx;
  padding-top: 30rpx;
  margin-top: 0;
  color: #313131;
}

.listTag{
  border: 1px solid #f74131;
  color: #f74131;
  border-radius: 50rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-right: 6rpx;
}
.weui-media-box__info__meta {
  position: relative;

}

.weui-media-box__info__meta image {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -18rpx;
  border-radius: 90rpx;
}
.weui-media-box__info__meta image.resolved{
  width: 72rpx;
  height: 30rpx;
  border-radius: 0;
  left: 10rpx;
  margin-top: -4rpx;
  /* margin-top: -36rpx; */
}
.weui-media-box__info__meta image.commentCount{
  position: relative;
  left:unset;
  top: unset;
  width: 28rpx;
  height: 28rpx;
  margin: 0 6rpx 0 24rpx;
  vertical-align: -3rpx;
  border-radius: 0;
}

.weui-media-box__info__meta_extra {
  float: right;
  padding-left: 0;
  border-left: 0;
}
.listimg{
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

