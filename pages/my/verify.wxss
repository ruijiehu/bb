  content: unset;
}
.weui-input{
  margin-left: 2rpx !important;
}
.tips{
  text-align: center;
  background: #fff;
}
.tips image{
  width: 26rpx;
  height: 26rpx;
  margin: 0 10rpx;
}
.weui-input{
  display: inline-block;
  width: 100%;
  height:1.5em;
min-height:1.5em;
line-height:1.5em;
  margin-left: 10px;
  border-bottom:1px solid #cecece;
  text-align: left;
  margin-top: 10rpx;
}
.center{
  text-align: center;
}
.weui-uploader__file{
    margin-right: 0;
    width: 100%;
}
.weui-uploader__img{
   width: 100%;
  height: 328rpx;
}
.weui-uploader__input-box {
  margin-right: 0;
  width: 100%;
  height: 328rpx;
  box-sizing: border-box;
  border:1rpx dashed #D9D9D9;

}
.weui-btn-area{
  margin:2.17647059em 84rpx 0.3em;
}
.send-code{
 padding-right: 200rpx;
 box-sizing: border-box;
}
.send-code-btn{
  color: #222;
   position: absolute;
  right: 0;
  top: 0;
}

switch{
 transform:scale(0.4,0.4);  
}
.weui-select{
  text-align: left;
  padding: 0;
  border-right: 0;
  border-bottom: 1px solid  #cecece;
}
.placeholder{
  color: #777;
}
.weui-btn-area{
  margin: 120rpx 0 0 0;
}
.weui-btn-area button{
width: 656rpx;
}

.weui-uploader__input-box:before{
  content: unset;
}
.weui-uploader__input-box:after{
  content: '上传';
  border: 0;
  background: unset;
  height: 40rpx;
  top:50%;
left:50%;
-webkit-transform:translate(-50%, -50%);
transform:translate(-50%, -50%);
color: #D9D9D9;
}
.weui-uploader__input-box:active:after{
 background: unset;
 color: #999999;
}