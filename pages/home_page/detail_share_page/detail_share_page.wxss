/* 发送信息 */
.send-message {
  position: fixed;
  z-index: 99;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  left: 0;
  bottom: 0;
  width:100%;
  height: 100rpx;
  vertical-align: middle;
  padding: 30rpx 20rpx 10rpx 20rpx;
  background: #eee;
  box-sizing: border-box;
}
.send-message input{
  display: inline-block;
  /* border: 1px solid #e4e4e4; */
  height:72rpx;
min-height:72rpx;
line-height:72rpx;
width: 400rpx;
padding: 8rpx 20rpx 0 20rpx;
font-size: 32rpx;
border-radius: 24rpx;
position: absolute;
top: 10rpx;
left: 90rpx;
/* background: #fff; */
}
.send-message input[hidden]{
  display: none;
}
.send-message::before{
  content: '';
    display: inline-block;
  border: 1px solid #e4e4e4;
  height:52rpx;
min-height:52rpx;
line-height:52rpx;
width: 470rpx;
padding: 8rpx 20rpx 0 20rpx;
font-size: 22rpx;
border-radius: 24rpx;
position: absolute;
top: 20rpx;
left: 90rpx;
background: #fff;
}

.send-message button{
  background: #189aff;
  font-size: 22rpx;
  /* line-height: 1.8; */
  padding: 6rpx 30rpx 0 30rpx;
  position: absolute;
  right: 20rpx;
  top:25rpx;
  z-index: 1;
}
.send-message .choise-icon{
  width: 82rpx;
  height: 82rpx;
  position: absolute;
  top:5rpx;
  left: 5rpx;
  display: inline-block;
  z-index: 2;
}
.send-message .choise-icon image{
  width:52rpx;
  height: 52rpx;
  margin-top: 20rpx;
  margin-left: 15rpx;
  border-radius: 90rpx;
}
.send-message .choise-icon[hidden]{
  display: none;
}
