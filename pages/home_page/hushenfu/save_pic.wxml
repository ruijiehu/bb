<view class="page-loading" wx:if="{{showLoading}}" style='background:none'>
  <view class="weui-loading"></view>
  <view style='position:absolute;left:50%;top:40%;margin-top:-20rpx;margin-left:-90rpx;color:#ccc;'>符正在生成中……</view>
</view>
<!-- 护身符生成 -->
<view style='height:100%;background:url("../../images/bg.png");overflow:hidden'>
  <view style='width:70%;height:70%;margin:50rpx auto;' >
    <image hidden="{{showLoading}}" style='width:100%;height:100%;' data-src="{{images}}" src='{{images}}'></image>
  </view>
  <view bindtap='save_pic' data-src="{{images}}" style='width:70%;height:100rpx;margin:70rpx auto;background:#f74131;color:#fff;font-size:34rpx;text-align:center;line-height:100rpx;'>点击保存</view>
</view>