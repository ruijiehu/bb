.searchBox{
  width:90%;
  /* background:#fafafa; */
height:64rpx;
margin-bottom:50rpx;
position: relative;
margin:0 auto;
}
.search_ico{
  position: absolute;
  display: block;
  width:28rpx;
  height: 28rpx;
  left: 5%;
  top: 30%;
}
.searchText{
  border:1rpx solid #ccc;
  width: 90%;
  text-align:left;
  border-radius:30rpx;
  margin:4rpx auto;
