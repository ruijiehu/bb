.dt,.pl{
  margin-top: 56rpx;
   padding:0 40rpx; 
   overflow: hidden
}
.dt>view{
  margin-bottom:60rpx;
  padding-bottom:40rpx;
border-bottom:1px solid #eee;

}
 .ms_t{
  height: 70rpx;
  position: relative;
}
.ms_t button{
	position: absolute;
	right: 10rpx;
	top: 10rpx;
	/* width: 86rpx; */
	font-size: 28rpx;
	line-height: 30rpx;
	text-align: center;
	
	color: #f74131;
	border:1px solid #f74131;
  padding:10rpx 10rpx;
  border-radius:50rpx;

}
.ms_t image{
  width:70rpx;
  height: 70rpx;
  /* border-radius: 50%; */
  margin-right: 27rpx;
  float: left;
}
 .ms_t view{
  width: 580rpx;
  padding-top:20rpx;

}
.ms_t view text{
  text-align: left;
    display: block;
}
 .ms_t view text:nth-child(1){

  font-size: 32rpx;
  color:#535353;
  font-weight: bold;
  line-height: 40rpx;
}
 .ms_t view text:nth-child(2){
  
  font-size: 22rpx;
  color:#aaa;
  line-height: 32rpx;
}
.sure_dia{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
}
.sure_dia .mask{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.2)
}
.sure_dia .dialog{
  background: #fff;
  width:50%;
  height: 340rpx;
  position: absolute;
  left: 50%;
  top: 30%;
  transform: translateX(-50%);
  border-radius:20rpx;
}
.sure_dia .dialog>text{
  display:block;
width:100%;
text-align:center;
font-size:28rpx;
color:#aaa;
margin-top:60rpx;
}
.sure_dia .dialog>text:nth-child(2){
  margin-top: 10rpx
}
.sure_dia .dialog>button{
  width:120rpx;
  height:50rpx;
  font-size:28rpx;
  line-height:50rpx;
  text-align:center;
  margin-top: 40rpx;
}
.noscroll {
     height: 100%;
     overflow: hidden;

} 