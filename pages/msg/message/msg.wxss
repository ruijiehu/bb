.swiper-tab{  
    width: 100%;  
    text-align: center;  
    margin-bottom:40rpx;

    }  
.swiper-tab-list{  
  font-size: 32rpx;  
    display: inline-block;  
    padding:17rpx 40rpx;
    color: #282828;  
    font-weight: 700;
}  
.list2{margin:0 80rpx}
.on{ 
  color: #282828;  
  border-bottom: 6rpx solid #282828;
  }  
  
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  
.swiper-box view{  
    text-align: center;  
} 


.content{
  padding:0 40rpx;
  height: 92rpx;
  line-height: 92rpx;
  font-size: 26rpx;
}
.content view{
  display: inline-block;
  float: left;
  color:#535353;
}
.content view:nth-child(2){
  max-width: 350rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color:#000;
  margin-left: 25rpx;
}
.content view:nth-child(3){
  font-size: 22rpx;
  color:#9c9c9c;
  float: right;
}